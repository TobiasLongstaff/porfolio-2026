---
import { getCollection } from "astro:content";
import PinnedCareerTimeline from "../pinned-career-timeline.tsx";

const experiences = await getCollection("experience");
---

<div
  class="min-h-screen"
>
  {
    experiences.length > 0 ? (
      <PinnedCareerTimeline experiences={experiences} client:visible />
    ) : (
      <p class="text-text-secondary text-xl">No hay experiencias disponibles</p>
    )
  }
</div>
