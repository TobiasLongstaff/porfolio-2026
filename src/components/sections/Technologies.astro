---
import { getCollection } from "astro:content";
import TechnologiesBento from "../TechnologiesBento";

const technologies = await getCollection("technologies");
---

<div class="min-h-screen w-full flex flex-col items-center justify-center gap-[25px] p-4 md:p-8">
  <h2 class="text-4xl md:text-6xl font-bold mb-4">Tecnolog√≠as</h2>
  <div class="w-full h-full flex-1 max-w-full">
    <TechnologiesBento
    technologies={technologies}
    textAutoHide={true}
    enableStars={false}
    enableSpotlight
    enableBorderGlow={true}
    enableTilt={false}
    enableMagnetism={false}
    clickEffect={false}
    spotlightRadius={460}
    particleCount={12}
    glowColor="46, 27, 250"
    disableAnimations={false}
    client:visible
  />
  </div>
</div>
